@model Sklep.ViewModels.indexViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wypożyczalnia filmów</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div id="Header">
            @foreach (var category in Model.Categories)
            {
                <a href="@Url.Action("List", "Films", new { categoryName = category.Name })">@category.Name</a>
            }
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div id="footer">
            <a href="@Url.Action("StaticSite", "Home", new { name = "kontakt" })">Kontakt</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "regulamin" })">Regulamin</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "onas" })">O nas</a>
            <a href="@Url.Action("StaticSite", "Home", new { name = "metodyplatnosci" })">Metody płatności</a>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>